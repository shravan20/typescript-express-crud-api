{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es6",
        "strict": false,
        "module": "commonjs",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "paths": {
            "*": ["./node_modules/*"],
            "@app/*": ["./src/*"]
        }
    },
    "include": [
    "./src/**/*",
    "*"
    ],
    "exclude": [
        "./dist",
        "./coverage",
        "./node_modules"
    ]
}